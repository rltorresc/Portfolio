---
import ExperiencieItem from "./ExperiencieItem.astro";

const EXPERIENCE = [
  {
    date: "Septiembre 2023",
    title: "Diseño & Desarrollo Web Freelance",
    description:
      "Desarrollo y diseño de una landing page para la startup Magical20. Uso de tecnologías como Astro, Tailwind CSS y React.",
  },
];
---

<ol class="relative border-s border-gray-400 dark:border-gray-700 ml-2.5">
  {
    EXPERIENCE.map((experience) => (
      <li class="mb-10 ms-4">
        <ExperiencieItem {...experience} />
      </li>
    ))
  }
</ol>
